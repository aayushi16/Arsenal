<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

<session-factory>

<property name="hibernate.connection.driver_class"> com.mysql.jdbc.Driver</property>

<property name="hibernate.connection.url">jdbc:mysql://localhost/arse</property>

<property name="hibernate.connection.username">root</property>

<property name="hibernate.connection.password">root</property>

<property name="hibernate.connection.pool_size">10</property>

<property name="show_sql">true</property>

<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

<property name="hibernate.hbm2ddl.auto">update</property>

<mapping resource="VO/categoryVO.hbm.xml"/>
<mapping resource="VO/subcategoryVO.hbm.xml"/>
<mapping resource="VO/userVO.hbm.xml"/>
<mapping resource="VO/gunVO.hbm.xml"/>
<mapping resource="VO/vehicleVO.hbm.xml"/>
<mapping resource="VO/userDetailsVO.hbm.xml"/>
<mapping resource="VO/gunBulletVO.hbm.xml"/>
<mapping resource="VO/attendanceVO.hbm.xml"/>
<mapping resource="VO/gunallocationVO.hbm.xml"/>
<mapping resource="VO/gunallocationmpgVO.hbm.xml"/>
<mapping resource="VO/vehicleallocationVO.hbm.xml"/>
<mapping resource="VO/vehicleallocationmpgVO.hbm.xml"/>
<mapping resource="VO/maintenanceVO.hbm.xml"/>
<mapping resource="VO/complaintVO.hbm.xml"/>
<mapping resource="VO/circularVO.hbm.xml"/>
<mapping resource="VO/newsVO.hbm.xml"/>
<mapping resource="VO/attachmentMappingVO.hbm.xml"/>
<mapping resource="VO/attachmentVO.hbm.xml"/>
</session-factory>

</hibernate-configuration>